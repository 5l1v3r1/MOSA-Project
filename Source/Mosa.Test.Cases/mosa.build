<?xml version="1.0"?>
<project name="Mosa" default="build" basedir=".">
	
	<!-- Comma-separated list of warnings that should be surpressed in all modules. Warning: no spaces allowed! -->
	<property name="suppresswarnings" value="0414,0219,0169,0162,0168"/>
	
	<!-- Toggle debug output by setting this to true (nant -D:debug=true) -->
	<property name="debug" value="none" overwrite="false"/>
	
	<!-- Speaks for itself, I should hope -->
	<property name="outputDirectory" value="../bin" overwrite="false"/>
	
	<!-- Main build target -->
	<target name="build">
	    <csc target="library" output="${outputDirectory}/Mosa.Test.Cases.dll" debug="${debug}" unsafe="true" nostdlib="false">
		<sources>
                    <include name="CIL/BooleanFixture.cs"/>
                    <include name="CIL/BoxingFixture.cs"/>
                    <include name="CIL/CallVirtualFixture.cs"/>
                    <include name="CIL/CharFixture.cs"/>
                    <include name="CIL/NewDerivedObjectFixture.cs"/>
                    <include name="CIL/RegisterAllocatorFixture.cs"/>
                    <include name="CIL/SpecificTestFixture.cs"/>
                    <include name="CIL/DelegateFixture.cs"/>
                    <include name="CIL/ExceptionHandlingFixture.cs"/>
                    <include name="CIL/FibonacciFixture.cs"/>
                    <include name="CIL/CallFixture.cs"/>
                    <include name="CIL/ComparisonFixture.cs"/>
                    <include name="CIL/GenericInterfaceFixture.cs"/>
                    <include name="CIL/Int16Fixture.cs"/>
                    <include name="CIL/Int8Fixture.cs"/>
                    <include name="CIL/ForeachFixture.cs"/>
                    <include name="CIL/SwitchFixture.cs"/>
                    <include name="CIL/UInt16Fixture.cs"/>
                    <include name="CIL/UInt8Fixture.cs"/>
                    <include name="CIL/DoubleFixture.cs"/>
                    <include name="CIL/EnumFixture.cs"/>
                    <include name="CIL/IsInstFixture.cs"/>
                    <include name="CIL/ConvFixture.cs"/>
                    <include name="CIL/GenericCallFixture.cs"/>
                    <include name="CIL/InitStructFixture.cs"/>
                    <include name="CIL/LdlocaFixture.cs"/>
                    <include name="CIL/StaticFieldFixture.cs"/>
                    <include name="CIL/StructureFixture.cs"/>
                    <include name="Extra/ConditionalOperatorFixture.cs"/>
                    <include name="CIL/LdargaFixture.cs"/>
                    <include name="CIL/Int32Fixture.cs"/>
                    <include name="CIL/Int64Fixture.cs"/>
                    <include name="CIL/InterfaceFixture.cs"/>
                    <include name="CIL/NewObjectFixture.cs"/>
                    <include name="CIL/SingleFixture.cs"/>
                    <include name="CIL/StringFixture.cs"/>
                    <include name="CIL/UInt32Fixture.cs"/>
                    <include name="CIL/UInt64Fixture.cs"/>
                    <include name="CIL/CallOrderFixture.cs"/>
                    <include name="CIL/WhileFixture.cs"/>
		</sources>
		<references>
                    <include name="System.dll"/>
                    <include name="../../3rdParty/Gallio.dll"/>
                    <include name="../../3rdParty/MbUnit.dll"/>
                    <include name="${outputDirectory}/Mosa.Test.CodeDomCompiler.dll"/>
                    <include name="${outputDirectory}/Mosa.Test.Collection.dll"/>
                    <include name="${outputDirectory}/Mosa.Test.Numbers.dll"/>
                    <include name="${outputDirectory}/Mosa.Test.System.dll"/>
		</references>
		<!-- supress warnings -->
		<nowarn><warning number="${suppresswarnings}"/></nowarn>
        </csc>
	</target>
</project>
